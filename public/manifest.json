{
  "manifest_version": 3,
  "name": "Github Colorful Contribution Graph",
  "description": "Colorful contribution graph for Github",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "version": "1.0.7",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "type": "module",
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "js": ["content_script.js"]
    }
  ],
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["*://*.github.com/*"]
}
